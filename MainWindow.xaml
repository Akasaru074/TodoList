<Window MinHeight="500" MinWidth="500" x:Class="TodoList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TodoList"
        mc:Ignorable="d"
        Title="Список задач" Height="450" Width="800">
    <Grid ShowGridLines="False">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock TextAlignment="Center" FontSize="40">Список задач</TextBlock>

        <StackPanel Margin="0,10,0,0" Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="1">
            <Label FontSize="20"  VerticalAlignment="Center">Введите задачу</Label>
            <TextBox Text="{Binding NewItemTitle, UpdateSourceTrigger=PropertyChanged}" Width="200" FontSize="20" Height="auto" Grid.Row="1" ></TextBox>
            <Button Command="{Binding AddCommand}" Margin="20,0,0,0" Content="Добавить" />
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0, 10">
            <TextBlock Text="Сортировать по:" VerticalAlignment="Center" Margin="0,0,10,0" />
            <ComboBox ItemsSource="{Binding SortFields}" SelectedItem="{Binding SelectedSortField}" Width="120" Margin="0,0,20,0" />
            <ComboBox SelectedValuePath="Tag" SelectedValue="{Binding IsSortAscending}" Width="140" >
                <ComboBoxItem Content="По возрастанию" Tag="True" />
                <ComboBoxItem Content="По убыванию" Tag="False" />
            </ComboBox>
        </StackPanel>

        <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding TodoItems}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="0,5" HorizontalAlignment="Center">
                            <CheckBox IsChecked="{Binding IsCompleted}" VerticalAlignment="Center" Margin="0,0,10,0" />
                            <TextBlock Text="{Binding Title}" FontSize="18" VerticalAlignment="Center" />
                            <Button Content="❌" Command="{Binding DataContext.RemoveCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}" 
                                    Margin="10, 0" Width="30" Height="30" CommandParameter="{Binding}" />
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

    </Grid>
</Window>
