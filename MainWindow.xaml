<Window MinHeight="500" MinWidth="500" x:Class="TodoList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TodoList"
        mc:Ignorable="d"
        Title="Список задач" Height="450" Width="800">
    <Grid ShowGridLines="False">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock TextAlignment="Center" FontSize="40">Список задач</TextBlock>

        <StackPanel Margin="0,10,0,0" Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="1">
            <Label FontSize="20"  VerticalAlignment="Center">Введите задачу</Label>
            <TextBox x:Name="todoInp" Width="200" FontSize="20" Height="auto" Grid.Row="1" ></TextBox>
            <Button Click="btnAddTask_Click" x:Name="btnAddTask" Margin="20,0,0,0">Добавить</Button>
        </StackPanel>

        <StackPanel Name="todosList" Orientation="Vertical" Margin="0,20,0,20" HorizontalAlignment="Center" Grid.Row="2">
            
        </StackPanel>

    </Grid>
</Window>
